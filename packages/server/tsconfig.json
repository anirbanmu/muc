{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext", // Use NodeNext for Node.js ES Modules
    "moduleResolution": "nodenext", // Crucial for Node.js ES Modules resolution
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../common" }]
}
