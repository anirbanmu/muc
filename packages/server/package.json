{
  "name": "@muc/server",
  "version": "1.0.0",
  "description": "Hono backend for MUC project.",
  "type": "module",
  "main": "dist/server.bundle.cjs",
  "scripts": {
    "build": "esbuild src/server.ts --bundle --platform=node --target=node20 --outfile=dist/server.bundle.cjs --format=cjs --banner:js='#!/usr/bin/env node'",
    "start": "node --env-file=../../.env dist/server.bundle.cjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@muc/common": "*",
    "hono": "^4.11.1",
    "supports-color": "^10.2.2"
  }
}
