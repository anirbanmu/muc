{
  "name": "muc-root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for the MUC project.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:common && npm run build:client && npm run build:server && npm run build:cli",
    "build:common": "npm run build --workspace=@muc/common",
    "build:server": "npm run build --workspace=@muc/server",
    "build:client": "npm run build --workspace=@muc/client",
    "build:cli": "npm run build --workspace=@muc/cli",
    "clean": "rimraf --glob \"./packages/*/dist\" \"./packages/*/node_modules/.tmp\"",
    "clean:node-modules": "rimraf --glob \"./node_modules\" \"./packages/*/node_modules\"",
    "clean:all": "npm run clean && npm run clean:node-modules",
    "start": "npm run start --workspace=@muc/server",
    "start:clean": "npm run clean && npm run build && npm run start",
    "test": "npm run test --workspace=@muc/common",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  }
}
